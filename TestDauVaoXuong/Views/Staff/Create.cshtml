@model TestDauVaoXuong.Models.Staff

@{
    ViewData["Title"] = "Create";
}
<h1>Create</h1>

<h4>Staff</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <!-- Tên nhân viên -->
            <div class="form-group mb-3">
                <label asp-for="Name" class="form-label">Tên nhân viên</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <!-- Mã nhân viên -->
            <div class="form-group mb-3">
                <label asp-for="StaffCode" class="form-label">Mã nhân viên</label>
                <input asp-for="StaffCode" class="form-control" />
                <span asp-validation-for="StaffCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccountFe" class="control-label"></label>
                <input asp-for="AccountFe" class="form-control" />
                <span asp-validation-for="AccountFe" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccountFpt" class="control-label"></label>
                <input asp-for="AccountFpt" class="form-control" />
                <span asp-validation-for="AccountFpt" class="text-danger"></span>
            </div>
            <!-- Trạng thái -->
            <div class="form-group">
                <label asp-for="Status" class="form-label">Trạng thái</label>
                <select asp-for="Status" class="form-select">
                    <option value="1">Hoạt động</option>
                    <option value="2">Không hoạt động</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
